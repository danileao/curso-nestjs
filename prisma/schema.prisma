// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  username  String     @unique
  email     String     @unique
  password  String
  name      String
  avatarUrl String?
  createdAt DateTime   @default(now())
  TaskUser  TaskUser[]

  @@map("users")
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String
  startAt     DateTime
  endAt       DateTime
  priority    String
  status      String
  TaskUser    TaskUser[]

  @@map("tasks")
}

model TaskUser {
  id   String @id @default(uuid())
  task Task   @relation(fields: [taskId], references: [id])
  user User   @relation(fields: [userId], references: [id])

  taskId    String
  userId    String
  createdAt DateTime @default(now())

  @@map("tasks_users")
}
